// Prisma Schema - Generated Dynamically
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// This schema will be regenerated dynamically by the sync engine
// Basic model for initial deployment

model SyncStatus {
  id        String   @id @default(cuid())
  running   Boolean  @default(false)
  progress  Int      @default(0)
  currentTable String?
  lastSync  DateTime?
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("sync_status")
}

// Generic model to store synced records from Bubble
model SyncedRecord {
  id          String   @id @default(cuid())
  bubbleId    String   @unique @map("bubble_id")
  dataType    String   @map("data_type")
  rawData     Json     @map("raw_data")    // Original data from Bubble
  processedData Json?  @map("processed_data") // Processed data with safe field names
  
  syncedAt    DateTime @default(now()) @map("synced_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@index([dataType])
  @@index([bubbleId])
  @@map("synced_records")
}
