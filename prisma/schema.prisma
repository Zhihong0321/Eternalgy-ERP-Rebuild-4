generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model sync_status {
  id           String    @id
  running      Boolean   @default(false)
  progress     Int       @default(0)
  currentTable String?
  lastSync     DateTime?
  error        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
}

model synced_records {
  id             String   @id
  bubble_id      String   @unique
  data_type      String
  raw_data       Json
  processed_data Json?
  synced_at      DateTime @default(now())
  updated_at     DateTime

  @@index([bubble_id])
  @@index([data_type])
}
