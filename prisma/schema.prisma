// Prisma Schema - Generated Dynamically
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// This schema will be regenerated dynamically by the sync engine
// Basic model for initial deployment

model SyncStatus {
  id        String   @id @default(cuid())
  running   Boolean  @default(false)
  progress  Int      @default(0)
  currentTable String?
  lastSync  DateTime?
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("sync_status")
}
